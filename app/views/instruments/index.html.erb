<div class="bg-white">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
          Rent Musical Instruments
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          Discover professional instruments for every occasion
        </p>
      </div>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
      <%= form_with url: search_instruments_path, method: :get, local: true, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Search -->
          <div class="md:col-span-2">
            <%= f.text_field :q, 
                placeholder: "Search instruments, brands, or descriptions...", 
                value: params[:q],
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          
          <!-- Category Filter -->
          <div>
            <%= f.select :category, 
                options_for_select([["All Categories", ""]] + Instrument.categories.map { |k, v| [k.humanize, k] }, params[:category]),
                {}, 
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
          </div>
          
          <!-- Sort -->
          <div>
            <%= f.select :sort,
                options_for_select([
                  ["Newest First", "newest"],
                  ["Price: Low to High", "price_asc"], 
                  ["Price: High to Low", "price_desc"],
                  ["Most Popular", "popular"]
                ], params[:sort]),
                {},
                { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
          </div>
        </div>
        
        <div class="flex justify-between items-center">
          <%= f.submit "Search", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
          <%= link_to "Clear Filters", instruments_path, class: "text-gray-600 hover:text-gray-800" %>
        </div>
      <% end %>
    </div>

    <!-- Results Summary -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-gray-900">
        <%= pluralize(@pagy.count, 'instrument') %> available
      </h2>
      
      <div class="text-sm text-gray-500">
        Page <%= @pagy.page %> of <%= @pagy.pages %>
      </div>
    </div>

    <!-- Instruments Grid -->
    <% if @instruments.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @instruments.each do |instrument| %>
          <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border">
            <!-- Image -->
            <div class="aspect-video bg-gray-200 rounded-t-lg overflow-hidden">
              <% if instrument.primary_image.present? %>
                <%= image_tag instrument.primary_image, 
                    class: "w-full h-full object-cover",
                    alt: "#{instrument.brand} #{instrument.name}" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
                  <svg class="w-16 h-16 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
              
              <!-- Category Badge -->
              <div class="absolute top-3 left-3">
                <span class="bg-white bg-opacity-90 text-gray-800 text-xs font-medium px-2 py-1 rounded-full">
                  <%= instrument.category.humanize %>
                </span>
              </div>
            </div>
            
            <!-- Content -->
            <div class="p-4">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <h3 class="font-semibold text-gray-900 text-lg">
                    <%= link_to instrument_path(instrument), class: "hover:text-blue-600" do %>
                      <%= instrument.brand %>
                    <% end %>
                  </h3>
                  <p class="text-gray-600 text-sm"><%= instrument.name %></p>
                </div>
                
                <div class="text-right">
                  <div class="text-lg font-bold text-green-600">
                    $<%= instrument.daily_rate %><span class="text-sm font-normal text-gray-500">/day</span>
                  </div>
                </div>
              </div>
              
              <!-- Location and Condition -->
              <div class="flex justify-between items-center text-sm text-gray-500 mb-3">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                  </svg>
                  <%= truncate(instrument.location, length: 20) %>
                </div>
                <span class="capitalize bg-gray-100 px-2 py-1 rounded text-xs">
                  <%= instrument.condition %>
                </span>
              </div>
              
              <!-- Description -->
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                <%= truncate(instrument.description, length: 100) %>
              </p>
              
              <!-- Owner Info -->
              <div class="flex items-center justify-between">
                <div class="flex items-center text-sm text-gray-500">
                  <div class="w-6 h-6 bg-gray-300 rounded-full mr-2 flex items-center justify-center">
                    <span class="text-xs font-medium text-gray-700">
                      <%= instrument.owner.first_name.first.upcase %>
                    </span>
                  </div>
                  <%= instrument.owner.first_name %>
                  <% if instrument.owner.average_rating > 0 %>
                    <span class="ml-2 flex items-center">
                      <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <%= number_with_precision(instrument.owner.average_rating, precision: 1) %>
                    </span>
                  <% end %>
                </div>
                
                <%= link_to instrument_path(instrument), 
                    class: "bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors" do %>
                  View Details
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <div class="flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
      
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
        </svg>
        <h3 class="text-xl font-medium text-gray-900 mb-2">No instruments found</h3>
        <p class="text-gray-500 mb-6">Try adjusting your search or filter criteria.</p>
        <%= link_to "Browse All Instruments", instruments_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
